[{
	"type": "rpc",
	"id": "rpc.letsencrypt.setsettings",
	"params": {
		"type": "object",
		"properties": {
			"enable": {
				"type": "boolean",
				"required": true
			},
			"test_cert": {
				"type": "boolean",
				"required": true
			},
			"email": {
			    "type": "string",
				"format": "email",
				"required": true
			},
			"name": {
			    "type": "string",
				"required": true
			},
			"keylength": {
				"type": "integer",
				"minimum": 2048,
				"maximum": 4096,
				"required": true
			},
			"certuuid": {
			    "type": "string",
				"required": true
			}
		}
	}
},{
	"type": "rpc",
	"id": "rpc.letsencrypt.setdomain",
	"params": {
		"type": "object",
		"properties": {
			"uuid": {
				"type": "string",
				"format": "uuidv4",
				"required": true
			},
			"domain": {
			    "type": "string",
				"required": true
			},
			"webroot": {
			    "type": "string",
				"required": true
			}
		}
	}
}]
